{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/vlsite/css/arts.css') }}" type="text/css" media="all">
{% endblock %}


{% block sidebar %}
    {% include 'menu_1.html.twig' %}
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row ">
            <div class="col-xs-12 col-sm-9 container-fluid">            {#  <ul id="entities"> #}
                <a name="bob"></a>
                {% for entity in glavnaya %}

                    <div class="akes">
                        <div><h4> {{  entity.nickname }}</h4></div>
                        <div><h4> {{ entity.nazvanie }} </h4></div>
                        <div><h6> {{ entity.createdat|date('d-m-Y ') }}</h6></div><br/>
                        <div>
                            <p class="text-justify"> {% if df==false %}
                                    {{  entity.shortcont|raw }}
                                {% elseif df==true %}
                                    {{  entity.content|raw }}
                                    {% set df=false %}
                                {% endif %}
                            </p>
                        </div>
                        <br/>


                    </div> <!-- end class akes -->
                    <div class="list-inline ">
                        <a class="list-inline-item" href="#bob" {% set glavnaya=entity %} {% set df=true %}><i class="fa fa-refresh fa-spin"></i>  Подробнее </a>
                        <a class="list-inline-item" href="{{ path('vl_site_show', { 'slug' :entity.id , 'slug1' : 'yes' } ) }}"><i class="fa fa-cog fa-spin"></i>  Добавить комментарий</a>
                    </div>

                {% endfor %}
            </div>
            <div class="col-sm-3 fag1">
                <div class="perl"><h4>Matlab видеоканал</h4>
                    <a  href="{{ asset('https://www.youtube.com/channel/UCtuwVWw9H06uaTadcyO570A') }}" target="matlab"> <img src="{{ asset('bundles/vlsite/images/youtube.png') }}"  alt="symfony" />  </a>
                </div>
                <div class="thumbnail"><img src="http://placehold.it/270x480" alt="">
                </div>
                <div class="thumbnail"><img src="http://placehold.it/270x480" alt="">
                </div>
                <div class="thumbnail"><img src="http://placehold.it/270x240" alt="">
                </div>




            </div>




        </div>
    </div>
{% endblock %}